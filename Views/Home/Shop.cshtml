@model IEnumerable<WebApplicationIceCreamProject.Models.IceCream>
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="site-banner">
	<div class="banner-content">
		<div class="container">
			<div class="row">
				<div class="col-md-12">			
					<div class="colored">
						<h1>Shop</h1>
						<div class="breadcum-items">
                            <span class="item"><a asp-controller="Home" asp-action="Index">Home /</a></span>
							<span class="item colored">Shop</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!--site-banner-->

<section class="our-team bg-sand padding-large">
