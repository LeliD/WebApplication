@model IEnumerable<WebApplicationIceCreamProject.Models.IceCream>
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="site-banner">
	<div class="banner-content">
		<div class="container">
			<div class="row">
				<div class="col-md-12">			
					<div class="colored">
						<h1>Shop</h1>
						<div class="breadcum-items">
                            <span class="item" style="font-size: 20px;"><a asp-controller="Home" asp-action="Index">Home /</a></span>
                            <span class="item colored" style="font-size: 20px;">Shop</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!--site-banner-->

<section class="our-team bg-sand padding-large">
	<div class="container">
		<div class="row">

				@foreach (var item in Model) {
                <div class="product-item col-md-3 pb-4 text-center">
                   @* <a href=~/@Html.DisplayFor(modelItem => item.Image_URL) class="product-image"><img src=~/@Html.DisplayFor(modelItem => item.Image_URL)></a>*@
                    @if (Uri.IsWellFormedUriString(item.Image_URL, UriKind.Absolute))
                    {
                        <a href="@Html.DisplayFor(modelItem => item.Image_URL)" class="product-image"><img src="@Html.DisplayFor(modelItem => item.Image_URL)"></a>
                    }
                    else
                    {
                        <a href="~/images/@Html.DisplayFor(modelItem => item.Image_URL)" class="product-image"><img src="~/images/@Html.DisplayFor(modelItem => item.Image_URL)"></a>
                    }
                   <div class="text-comtent text-center">
                        <h5 class="pt-4"><a href="single-product.html">@Html.DisplayFor(modelItem => item.Name)</a></h5>
                        <p> @Html.DisplayFor(modelItem => item.Description)</p>
                        <span class="price colored"> @Html.DisplayFor(modelItem => item.Price)$</span>  
                    </div>
                  
                    <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
                  
                </div>
}

		</div>
	</div>
</section>

